<Window x:Class="Hotel2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel2025"
        mc:Ignorable="d"
          Title="Вход" Height="230" Width="300" Background="#FF6D8074" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10" Background="#FFE2EAD9" >
        <TextBlock Text="Авторизация" FontSize="25" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <Label Content="Имя пользователя" Margin="40 0 40 0"/>
        <TextBox x:Name="UsernameTextBox" Margin="30 0 30 0"/>
        <Label Content="Пароль" Margin="40 0 40 0"/>
        <PasswordBox x:Name="PasswordBox" Margin="30 0 30 0"/>
        <TextBlock x:Name="ErrorMessage" Foreground="Red" 
                   Visibility="Collapsed"/>
        <Button Content="Войти" Click="LoginButton_Click" Margin="50 7" Background="#FFAFD4B3" />
    </StackPanel>
</Window>
