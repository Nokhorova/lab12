<UserControl x:Class="HotelProgram.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelProgram.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1050">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 400">
            <TextBlock Text="Добро пожаловать!" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="60"
                   x:Name="tb" 
                   Foreground="{StaticResource plainTextColor2}">
            </TextBlock>
            <TextBlock Text="Программа предназначена для пользования сотрудниками гостиницы Абрамович" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Width="auto"
                   FontSize="25"
                   x:Name="tb1" 
                   Foreground="{StaticResource plainTextColor2}">
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
