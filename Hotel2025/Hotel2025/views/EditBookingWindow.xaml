<Window x:Class="HotelProgram.Views.EditBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProgram.Views"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local1="clr-namespace:HotelProgram.ViewModels" 
        d:DataContext="{d:DesignInstance Type=local1:EditBookingViewModel}"
        mc:Ignorable="d"
        Title="EditBookingWindow" Height="700" Width="730"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="10"
                BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Изменение бронирования"
                           Foreground="#D3D3D3"
                           FontSize="11"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                <Button x:Name="btnMinimize"
                        Style="{StaticResource loginButton}"
                        Tag="{StaticResource colorIconButtonMinimaze}"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click">
                    <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource loginButtonIcon}"/>
                </Button>

                <Button x:Name="btnClose"
                        Style="{StaticResource loginButton}"
                        Tag="{StaticResource colorIconButtonCLose}"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark" Style="{StaticResource loginButtonIcon}"/>
                </Button>
            </Grid>

            <!--Section about client-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Сведения о клиенте"
                           FontSize="16"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="25 10 0 0"/>
                <Separator BorderThickness="2" 
                           BorderBrush="{StaticResource separator}"
                           VerticalAlignment="Top"
                           Grid.Row="1"
                           Grid.ColumnSpan="3"
                           Margin="15 1 15 0"/>

                <TextBlock Grid.Row="2" Text="Фамилия"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="70 10 0 0"/>
                <hc:TextBox Grid.Row="3"
                            x:Name="autoCompleteTextBox_lastname"
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Padding="5 0 15 0"
                            Margin="70 5 0 0"
                            IsReadOnly="True"
                            Text="{Binding ClientLastName, Mode=TwoWay}"/>


                <TextBlock Grid.Row="4" 
                           Text="Имя"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="70 10 0 0"/>
                <hc:TextBox Grid.Row="5" 
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Padding="5 0 15 0"
                            Margin="70 5 0 0"
                            IsReadOnly="True"
                            Text="{Binding ClientName, Mode=TwoWay}"/>

                <TextBlock Grid.Row="6" 
                           Text="Отчество"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="70 10 0 0"/>
                <hc:TextBox Grid.Row="7" 
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Padding="5 0 15 0"
                            Margin="70 5 0 0"
                            IsReadOnly="True"
                            Text="{Binding ClientSurName, Mode=TwoWay}"/>

                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Text="Контактный номер"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="50 10 0 0"/>
                <hc:TextBox x:Name="tb_phonenumber" Grid.Column="1"
                            Grid.Row="3"
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Margin="50 5 70 0"
                            IsReadOnly="True"
                            TextChanged="tb_phonenumber_TextChanged"
                            Text="{Binding ClientContactNumber, Mode=TwoWay}"/>

                <TextBlock Grid.Row="4"
                           Grid.Column="1"
                           Text="Email"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="50 10 0 0"/>
                <hc:TextBox x:Name="tb_email" Grid.Column="1"
                            Grid.Row="5"
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Margin="50 5 70 0"
                            IsReadOnly="True"
                            Text="{Binding ClientEmail, Mode=TwoWay}"/>

                <TextBlock Grid.Row="6"
                           Grid.Column="1"
                           Text="Домашний адрес"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="50 10 0 0"/>
                <hc:TextBox x:Name="tb_address" Grid.Column="1"
                            Grid.Row="7"
                            Width="270"
                            Height="25"
                            IsReadOnly="True"
                            FontSize="14"
                            Margin="50 5 70 0"
                            Text="{Binding ClientAddress, Mode=TwoWay}"/>

                <TextBlock Grid.Row="8" Text="Данные о бронировании"
                           FontSize="16"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="25 10 0 0"/>
                <Separator BorderThickness="2" 
                           BorderBrush="{StaticResource separator}"
                           VerticalAlignment="Top"
                           Grid.Row="9"
                           Grid.ColumnSpan="6"
                           Margin="15 1 15 0"/>
            </Grid>

            <!--Section about booking-->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Дата заезда"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="35 10 0 0"/>
                <hc:DatePicker x:Name="datePickerIssue" 
                               Grid.Row="3"
                               Grid.Column="0"
                               Width="150"
                               Height="25"
                               FontSize="14"
                               Margin="35 5 15 0"
                               SelectedDate="{Binding BookingDateIssue, Mode=TwoWay}"/>

                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Text="Время заезда"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="0 10 0 0"/>
                <hc:TimePicker TimeFormat="HH:mm" x:Name="timePickerIssue" 
                               Grid.Row="3"
                               Grid.Column="1"
                               Width="100"
                               Height="25"
                               FontSize="14"
                               Margin="0 5 15 0"
                               hc:InfoElement.ShowClearButton="True"
                               SelectedTime="{Binding BookingTimeIssue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <hc:TimePicker.Clock>
                        <hc:ListClock SelectedTime="14:00:00"/>
                    </hc:TimePicker.Clock>
                </hc:TimePicker>

                <TextBlock Grid.Row="2"
                           Grid.Column="2"
                           Text="Кол-во суток"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="0 10 0 0"/>
                <hc:TextBox x:Name="tb_count_days" Grid.Column="2"
                            Grid.Row="3"
                            Width="100"
                            Height="25"
                            FontSize="14"
                            Margin="0 5 15 0"
                            Text="{Binding BookingCountDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2"
                           Grid.Column="3"
                           Text="Дата выезда"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="0 10 0 0"/>
                <hc:DatePicker x:Name="datePickerDeparture" 
                               Grid.Row="3"
                               Grid.Column="3"
                               Width="150"
                               Height="25"
                               FontSize="14"
                               Margin="0 5 15 0"
                               SelectedDate="{Binding BookingDateDeparture, Mode=TwoWay}"/>

                <TextBlock Grid.Row="2"
                           Grid.Column="4"
                           Text="Время выезда"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="0 10 0 0"/>
                <hc:TimePicker TimeFormat="HH:mm" x:Name="timePickerDeparture" 
                               Grid.Row="3"
                               Grid.Column="4"
                               Width="100"
                               Height="25"
                               FontSize="14"
                               Margin="0 5 35 0"
                               hc:InfoElement.ShowClearButton="True"
                               SelectedTime="{Binding BookingTimeDeparture, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <hc:TimePicker.Clock>
                        <hc:ListClock SelectedTime="12:00:00"/>
                    </hc:TimePicker.Clock>
                </hc:TimePicker>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <fa:IconImage Icon="Person"
                              Grid.Row="0"
                              VerticalAlignment="Center" HorizontalAlignment="Left"
                              Margin="61 10 15 0"
                              Width="22"
                              Height="22"
                              Foreground="{StaticResource plainTextColor1}"/>

                <hc:ComboBox x:Name="comboBox_persons"
                             Grid.Row="1" Grid.Column="0"
                             Width="67.5"
                             HorizontalAlignment="Left"
                             Margin="35 5 15 0"
                             ItemsSource="{Binding BookingCountPersonList}"
                             SelectedItem="{Binding SelectedBookingCountPerson}"/>

                <fa:IconImage Icon="Baby"
                              Grid.Row="0"
                              Grid.Column="1"
                              VerticalAlignment="Center" HorizontalAlignment="Left"
                              Margin="25 10 0 0"
                              Width="22"
                              Height="22"
                              Foreground="{StaticResource plainTextColor1}"/>

                <hc:ComboBox x:Name="comboBox_childrens"
                             Grid.Row="1" Grid.Column="1"
                             Width="67.5"
                             HorizontalAlignment="Left"
                             Margin="0 5 15 0"
                             ItemsSource="{Binding BookingCountChildrensList}"
                             SelectedItem="{Binding SelectedBookingCountChildrens}"/>
            </Grid>


            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="Категория номера"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="35 10 0 0"/>
                <hc:ComboBox Grid.Row="1"
                             HorizontalAlignment="Left" VerticalAlignment="Center"
                             Width="150"
                             Margin="35 5 15 0"
                             ItemsSource="{Binding RoomsTypeList}"
                             SelectedItem="{Binding SelectedRoomType}"
                             DisplayMemberPath="room_type_name"/>

                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Text="Номер"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="0 10 0 0"/>
                <hc:ComboBox Grid.Row="1"
                             Grid.Column="1"
                             HorizontalAlignment="Left" VerticalAlignment="Center"
                             Width="150"
                             Margin="0 5 15 0"
                             ItemsSource="{Binding RoomsList}"
                             SelectedItem="{Binding SelectedRoom}"
                             DisplayMemberPath="room_number"/>

                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           Text="Тариф"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="0 10 0 0"/>
                <hc:ComboBox Grid.Row="1"
                             Grid.Column="2"
                             HorizontalAlignment="Left" VerticalAlignment="Center"
                             Width="150"
                             Margin="0 5 15 0"
                             ItemsSource="{Binding TarifList}"
                             SelectedItem="{Binding SelectedTarif}"
                             DisplayMemberPath="tarif_name"/>
            </Grid>

            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="Комментарий"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="50 15 0 0"/>
                <hc:TextBox x:Name="tb_comment" 
                            Grid.Column="0"
                            Grid.Row="1"
                            Width="300"
                            Height="100"
                            FontSize="14"
                            TextWrapping="Wrap"
                            Margin="50 5 0 0"
                            VerticalAlignment="Top" TextAlignment="Left"
                            Text="{Binding BookingComment}"/>

                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            Height="30">
                    <TextBlock Width="377"
                               Height="30"
                               Text="Итоговая стоимость:"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="16"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0 0 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding BookingTotalCost}"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="28"
                               FontFamily="Stolzl Light"
                               Margin="0 0 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                    <TextBlock Text=" руб."
                               FontSize="28"
                               FontFamily="Stolzl Light"
                               Foreground="{StaticResource plainTextColor1}"
                               Background="Transparent"
                               Margin="5 0 5 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="btn_SaveBooking"
                        Width="300"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource addBookingBtn}"
                        Margin="0 20 0 20"
                        Command="{Binding SaveCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Save" 
                                      Style="{StaticResource iconButtonIcon}"
                                      Width="23"
                                      Height="23"
                                              Margin="0 0 15 0"/>
                            <TextBlock Text="Сохранить изменения"
                                       FontSize="18"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Border>

</Window>
