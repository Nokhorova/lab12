<Window x:Class="HotelProgram.Views.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProgram.Views"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local1="clr-namespace:HotelProgram.ViewModels" 
        d:DataContext="{d:DesignInstance Type=local1:EditEmployeeViewModel}"
        mc:Ignorable="d"
        Title="EditEmployeeWindow" Height="354" Width="730"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">



    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Изменение сотрудника"
                       Foreground="#D3D3D3"
                       FontSize="11"
                       FontFamily="Montserrat"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

                <Button x:Name="btnMinimize"
                    Style="{StaticResource loginButton}"
                    Tag="{StaticResource colorIconButtonMinimaze}"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimize_Click">
                    <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource loginButtonIcon}"/>
                </Button>

                <Button x:Name="btnClose"
                    Style="{StaticResource loginButton}"
                    Tag="{StaticResource colorIconButtonCLose}"
                    Cursor="Hand"
                    Grid.Column="2"
                    Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark" Style="{StaticResource loginButtonIcon}"/>
                </Button>
            </Grid>

            <!--Section about client-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Данные"
                       FontSize="16"
                       Foreground="{StaticResource plainTextColor1}"
                       Margin="25 10 0 0"/>
                <Separator BorderThickness="2" 
                       BorderBrush="{StaticResource separator}"
                       VerticalAlignment="Top"
                       Grid.Row="1"
                       Grid.ColumnSpan="3"
                       Margin="15 1 15 0"/>

                <TextBlock Grid.Row="2" Text="Фамилия"
                       Foreground="{StaticResource plainTextColor1}"
                       FontSize="14"
                       Margin="70 10 0 0"/>
                <hc:AutoCompleteTextBox Grid.Row="3"
                                    x:Name="autoCompleteTextBox_lastname"
                                    Width="270"
                                    Height="25"
                                    FontSize="14"
                                    Padding="5 0 15 0"
                                    Margin="70 5 0 0"
                                    Text="{Binding EmployeeLastName, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding Employees}"
                                    SelectedItem="{Binding SelectedEmployee}"
                                    DisplayMemberPath="employee_lastname"/>


                <TextBlock Grid.Row="4" 
                       Text="Имя"
                       Foreground="{StaticResource plainTextColor1}"
                       FontSize="14"
                       Margin="70 10 0 0"/>
                <hc:TextBox Grid.Row="5" 
                        Width="270"
                        Height="25"
                        FontSize="14"
                        Padding="5 0 15 0"
                        Margin="70 5 0 0"
                        Text="{Binding EmployeeName, Mode=TwoWay}"/>

                <TextBlock Grid.Row="6" 
                       Text="Отчество"
                       Foreground="{StaticResource plainTextColor1}"
                       FontSize="14"
                       Margin="70 10 0 0"/>
                <hc:TextBox Grid.Row="7" 
                        Width="270"
                        Height="25"
                        FontSize="14"
                        Padding="5 0 15 0"
                        Margin="70 5 0 0"
                        Text="{Binding EmployeeSurName, Mode=TwoWay}"/>

                <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Text="Контактный номер"
                       Foreground="{StaticResource plainTextColor1}"
                       FontSize="14"
                       Margin="50 10 0 0"/>
                <hc:TextBox x:Name="tb_phonenumber" Grid.Column="1"
                        Grid.Row="3"
                        Width="270"
                        Height="25"
                        FontSize="14"
                        Margin="50 5 70 0"
                        TextChanged="tb_phonenumber_TextChanged"
                        Text="{Binding EmployeeContactNumber, Mode=TwoWay}"/>

                <TextBlock Grid.Row="4"
                       Grid.Column="1"
                       Text="Email"
                       Foreground="{StaticResource plainTextColor1}"
                       FontSize="14"
                       Margin="50 10 0 0"/>
                <hc:TextBox x:Name="tb_email" Grid.Column="1"
                        Grid.Row="5"
                        Width="270"
                        Height="25"
                        FontSize="14"
                        Margin="50 5 70 0"
                        Text="{Binding EmployeeEmail, Mode=TwoWay}"/>
                <TextBlock Text="Отдел"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           Margin="50 10 0 0"
                           Grid.Row="6" Grid.Column="1"/>
                <hc:ComboBox Width="270"
                             Margin="50 5 70 0"
                             Grid.Row="7" Grid.Column="1"
                             ItemsSource="{Binding Departments}"
                             SelectedItem="{Binding SelectedDepartment}"
                             DisplayMemberPath="department_name"
                             SelectedValuePath="department_id"
                             SelectedValue="{Binding DepartmentId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <!--Section about booking-->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                

            </Grid>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="btn_SaveBooking"
                    Width="250"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource addBookingBtn}"
                    Margin="0 30 0 30"
                    Command="{Binding SaveCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Save" 
                                  Style="{StaticResource iconButtonIcon}"
                                  Width="23"
                                  Height="23"
                                          Margin="0 0 15 0"/>
                            <TextBlock Text="Сохранить сотрудника"
                                       FontSize="18"
                                       />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
