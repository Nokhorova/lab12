<UserControl x:Class="HotelProgram.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelProgram.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1050">

    <UserControl.Resources>
        <!-- Стиль для выравнивания заголовков столбцов по центру -->
        <Style x:Key="CenterAlignedHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="35 0 0 10"
                        Grid.Column="1">
                <Button x:Name="ExportToWordbtn" 
                        Width="auto"
                        Height="auto"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="-1"
                        Margin="0 0 10 0"
                        Click="ExportToWordButton_Click">
                    <Image Source="/Images/word.png" Height="38" Width="38" />
                </Button>
                <Button x:Name="ExportToExcelbtn" 
                        Width="auto"
                        Height="40"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="-1 0 -1 0"
                        Click="ExportToExcelButton_Click">
                    <Image Source="/Images/excel.png" Height="38" Width="38" />
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="с"
                           HorizontalAlignment="Center"
                           Margin="0 0 15 15"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="22"
                           FontFamily="{StaticResource PetrovSans}"
                           VerticalAlignment="Center"/>
                    <hc:DatePicker x:Name="startDatePicker"
                               Width="180"
                               Height="30"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="0 0 15 10">

                    </hc:DatePicker>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="по"
                       HorizontalAlignment="Center"
                       Margin="0 0 15 15"
                       Foreground="{StaticResource plainTextColor1}"
                       FontSize="22"
                       FontFamily="{StaticResource PetrovSans}"
                       VerticalAlignment="Center"/>
                    <hc:DatePicker x:Name="endDatePicker"
                           Width="180"
                           Height="30"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0 0 15 10">

                    </hc:DatePicker>
                </StackPanel>

                <Button Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="180"
                        Height="30"
                        Content="Сформировать отчёт"
                        x:Name="LoadReportBtn"
                        Margin="0 0 15 10"
                        Style="{StaticResource addBookingBtn}"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="LoadReportBtn_Click">

                </Button>
            </StackPanel>
        </Grid>
        <Separator BorderThickness="8" BorderBrush="{StaticResource separator}" Margin="15 40 15 0"/>

        <hc:TabControl x:Name="mainTabControl" Grid.Row="1" IsAnimationEnabled="True"
                       IsTabFillEnabled="True">
            <hc:TabItem x:Name="tabItemAdditionalOrder" Header="Общий отчёт о бронированиях">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--DataGrid-->
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{StaticResource CenterAlignedHeaderStyle}"
                              Style="{DynamicResource DataGridStyle1}"
                              CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
                              x:Name="dataGridGetBookingsReport"
                              Margin="10 0 10 15"
                              Height="auto"
                              IsReadOnly="True"
                              Grid.Row="0"
                              AutoGenerateColumns="True"
                              AutoGeneratingColumn="dataGridGetBookingsReport_AutoGeneratingColumn">

                    </DataGrid>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Top" 
                                Margin="10 0 10 0" 
                                Width="auto"
                                Height="40"
                                Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Left"
                                    Grid.Column="0"
                                    Margin="10 0 0 0">
                            <TextBlock Text="Заказов: " 
                                       FontSize="20"
                                       FontFamily="{StaticResource PetrovSans}"/>
                            <TextBlock x:Name="totalOrdersTextBlock"
                                       FontSize="20"
                                       FontFamily="{StaticResource PetrovSans}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Width="auto"
                                    Grid.Column="1"
                                    Margin="55 0 0 0">
                            <TextBlock Text="Общая стоимость: " 
                                       FontSize="20" 
                                       FontFamily="{StaticResource PetrovSans}"/>
                            <TextBlock x:Name="totalCostTextBlock" 
                                       FontSize="20"
                                       FontFamily="{StaticResource PetrovSans}"/>
                        </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </hc:TabItem>
            <hc:TabItem x:Name="tabItemServices" Header="Общий отчёт об услугах">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{StaticResource CenterAlignedHeaderStyle}"
                          Style="{DynamicResource DataGridStyle1}"
                          CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
                          x:Name="dataGridReportServices"
                          Margin="10 0 10 15"
                          Height="auto"
                          IsReadOnly="True"
                          Grid.Row="0"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="dataGridGetBookingsReport_AutoGeneratingColumn">

                    </DataGrid>
                </Grid>
            </hc:TabItem>
            <hc:TabItem x:Name="tabItemEmployessReport" Header="Отчёт о работе сотрудников">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{StaticResource CenterAlignedHeaderStyle}"
                          Style="{DynamicResource DataGridStyle1}"
                          CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
                          x:Name="dataGridReportEmployees"
                          Margin="10 0 10 15"
                          Height="auto"
                          IsReadOnly="True"
                          Grid.Row="0"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="dataGridGetBookingsReport_AutoGeneratingColumn">

                    </DataGrid>
                </Grid>
            </hc:TabItem>
            <hc:TabItem x:Name="tabItemIncomesReport" Header="Отчёт о доходах">
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{StaticResource CenterAlignedHeaderStyle}"
                          Style="{DynamicResource DataGridStyle1}"
                          CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
                          x:Name="dataGridReportIncomes"
                          Margin="10 0 10 15"
                          Height="auto"
                          IsReadOnly="True"
                          Grid.Row="0"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="dataGridGetBookingsReport_AutoGeneratingColumn">

                </DataGrid>
            </hc:TabItem>
        </hc:TabControl>
    </Grid>
</UserControl>
