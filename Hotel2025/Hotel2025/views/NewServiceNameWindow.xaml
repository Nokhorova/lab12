<Window x:Class="HotelProgram.Views.NewServiceNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProgram.Views"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local1="clr-namespace:HotelProgram.ViewModels" 
        d:DataContext="{d:DesignInstance Type=local1:NewServiceNameViewModel}"
        mc:Ignorable="d"
        Title="NewServiceNameWindow" Height="400" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">



    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Добавление услуги"
                       Foreground="#D3D3D3"
                       FontSize="11"
                       FontFamily="Montserrat"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

                <Button x:Name="btnMinimize"
                    Style="{StaticResource loginButton}"
                    Tag="{StaticResource colorIconButtonMinimaze}"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimize_Click">
                    <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource loginButtonIcon}"/>
                </Button>

                <Button x:Name="btnClose"
                    Style="{StaticResource loginButton}"
                    Tag="{StaticResource colorIconButtonCLose}"
                    Cursor="Hand"
                    Grid.Column="2"
                    Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark" Style="{StaticResource loginButtonIcon}"/>
                </Button>
            </Grid>

            <!--Section about serivce-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Данные об услуге"
                           FontSize="16"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="25 10 0 0"/>
                <Separator BorderThickness="2" 
                           BorderBrush="{StaticResource separator}"
                           VerticalAlignment="Top"
                           Grid.Row="1"
                           Margin="15 1 15 0"/>

                <TextBlock Grid.Row="1" 
                           Text="Наименование"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0 10 170 0"/>
                <hc:TextBox Grid.Row="2" 
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Padding="5 0 15 0"
                            Margin="0 5 0 0"
                            Text="{Binding ServiceName, Mode=TwoWay}"/>
                <TextBlock Grid.Row="3" 
                           Text="Описание"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0 10 205 0"/>
                <hc:TextBox Grid.Row="4" 
                            Width="270"
                            Height="75"
                            FontSize="14"
                            Padding="5 0 15 0"
                            Margin="0 5 0 0"
                            Text="{Binding ServiceDescription, Mode=TwoWay}"
                            TextWrapping="Wrap"/>
                <TextBlock Grid.Row="5" 
                           Text="Стоимость (руб.)"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0 10 165 0"/>
                <hc:TextBox Grid.Row="6" 
                            Width="270"
                            Height="25"
                            FontSize="14"
                            Padding="5 0 15 0"
                            Margin="0 5 0 0"
                            Text="{Binding ServiceCost, Mode=TwoWay}"/>

            </Grid>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="btn_SaveEmployee"
                    Width="250"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource addBookingBtn}"
                    Margin="0 30 0 30"
                    Command="{Binding SaveCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Save" 
                                  Style="{StaticResource iconButtonIcon}"
                                  Width="23"
                                  Height="23"
                                          Margin="0 0 15 0"/>
                            <TextBlock Text="Добавить услугу"
                                       FontSize="18"
                                       />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
