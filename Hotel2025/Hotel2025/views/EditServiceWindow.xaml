<Window x:Class="HotelProgram.Views.EditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProgram.Views"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local1="clr-namespace:HotelProgram.ViewModels" 
        xmlns:local2="clr-namespace:HotelProgram.Converters"
        d:DataContext="{d:DesignInstance Type=local1:EditServiceViewModel}"
        mc:Ignorable="d"
        Title="EditServiceWindow" MaxHeight="485" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <local2:TimeSpanToDateTimeConverter x:Key="TimeSpanToDateTimeConverter"/>
    </Window.Resources>

    <Border CornerRadius="10"
                BorderThickness="1"
            Height="auto"
            Width="auto">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Редактирование заказа"
                           Foreground="#D3D3D3"
                           FontSize="11"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                <Button x:Name="btnMinimize"
                        Style="{StaticResource loginButton}"
                        Tag="{StaticResource colorIconButtonMinimaze}"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click">
                    <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource loginButtonIcon}"/>
                </Button>

                <Button x:Name="btnClose"
                        Style="{StaticResource loginButton}"
                        Tag="{StaticResource colorIconButtonCLose}"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark" Style="{StaticResource loginButtonIcon}"/>
                </Button>
            </Grid>

            <!--Section about client-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Клиент"
                           FontSize="16"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="25 10 0 0"/>
                <Separator BorderThickness="2" 
                           BorderBrush="{StaticResource separator}"
                           VerticalAlignment="Top"
                           Grid.Row="1"
                           Margin="15 1 15 0"/>

                <TextBlock Grid.Row="2" Text="ФИО Клиента"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="14"
                           HorizontalAlignment="Left"
                           Margin="50 10 0 0"/>
                <hc:AutoCompleteTextBox Grid.Row="3"
                                        x:Name="autoCompleteTextBox_lastname"
                                        Width="500"
                                        Height="25"
                                        FontSize="14"
                                        Padding="5 0 15 0"
                                        Margin="50 5 0 0"
                                        HorizontalAlignment="Left"
                                        ItemsSource="{Binding Clients}"
                                        SelectedValue="{Binding SelectedClientId, Mode=TwoWay}"
                                        SelectedValuePath="client_id"
                                        DisplayMemberPath="FullName">
                </hc:AutoCompleteTextBox>

                <TextBlock Grid.Row="4" Text="Данные о заказе"
                           FontSize="16"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="25 10 0 0"/>
                <Separator BorderThickness="2" 
                           BorderBrush="{StaticResource separator}"
                           VerticalAlignment="Top"
                           Grid.Row="5"
                           Margin="15 1 15 0"/>
            </Grid>

            <!--Section about service-->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Дата заказа"
                                   Foreground="{StaticResource plainTextColor1}"
                                   FontSize="14"
                                   Margin="0 10 0 0"
                                   HorizontalAlignment="Left"/>
                        <hc:DatePicker x:Name="datePickerOrder"
                                       Width="170"
                                       Height="25"
                                       FontSize="14"
                                       Margin="0 5 15 0"
                                       SelectedDate="{Binding SelectedDate, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Время заказа"
                                   Foreground="{StaticResource plainTextColor1}"
                                   FontSize="14"
                                   Margin="0 10 0 0"/>
                        <hc:TimePicker TimeFormat="HH:mm" x:Name="timePickerOrder"
                                       Width="170"
                                       Height="25"
                                       FontSize="14"
                                       Margin="0 5 15 0"
                                       hc:InfoElement.ShowClearButton="True"
                                       SelectedTime="{Binding SelectedTime, Mode=TwoWay, Converter={StaticResource TimeSpanToDateTimeConverter}}">
                            <hc:TimePicker.Clock>
                                <hc:ListClock SelectedTime="14:00:00"/>
                            </hc:TimePicker.Clock>
                        </hc:TimePicker>
                    </StackPanel>
                </StackPanel>
            </Grid>


            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Добавить услугу"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="14"
                               Margin="55 10 10 0"/>
                    <Button Grid.Column="0" Grid.Row="0"
                            x:Name="addComboBoxServiceName"
                            Style="{StaticResource iconButton}"
                            Height="auto" 
                            Width="auto"
                            Margin="0 12 0 0"
                            Command="{Binding AddServiceCommand}">
                        <fa:IconImage Icon="SquarePlus" 
                                      Width="18" Height="18" 
                                      Style="{StaticResource iconButtonIcon}"/>
                    </Button>
                </StackPanel>

                <ItemsControl Grid.Row="1" Grid.ColumnSpan="3" 
                              ItemsSource="{Binding SelectedServices}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" Rows="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <hc:ComboBox Grid.Column="0" 
                                             HorizontalAlignment="Left" 
                                             VerticalAlignment="Center" 
                                             Width="150" 
                                             Margin="35 10 -5 0"
                                             ItemsSource="{Binding DataContext.Services, RelativeSource={RelativeSource AncestorType=Window}}"
                                             SelectedItem="{Binding service_name, Mode=TwoWay}"
                                             DisplayMemberPath="service_name1"
                                             SelectedValuePath="service_name_id"/>
                                <Button Grid.Column="1"
                                        Style="{StaticResource iconButton}"
                                        Height="18" Width="18"
                                        Margin="0 10 -40 0"
                                        Command="{Binding DataContext.RemoveServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <fa:IconImage Icon="SquareMinus" Width="18" Height="18" Style="{StaticResource iconButtonIcon}"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </Grid>

            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            Height="30"
                            HorizontalAlignment="Center">
                    <TextBlock Width="377"
                               Height="30"
                               Text="Итоговая стоимость:"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="16"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0 5 0 0"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding AdditionalOrderTotalCost}"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="28"
                               FontFamily="Stolzl Light"
                               Margin="0 5 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                    <TextBlock Text=" руб."
                               FontSize="28"
                               FontFamily="Stolzl Light"
                               Foreground="{StaticResource plainTextColor1}"
                               Background="Transparent"
                               Margin="5 5 5 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="btn_SaveBooking"
                        Width="220"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource addBookingBtn}"
                        Margin="0 20 0 20"
                        Command="{Binding SaveCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Save" 
                                      Style="{StaticResource iconButtonIcon}"
                                      Width="23"
                                      Height="23"
                                              Margin="0 0 15 0"/>
                            <TextBlock Text="Создать заказ"
                                           FontSize="18"
                                           />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>